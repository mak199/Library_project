<a href="/users/logout" class="btn btn-secondary">Logout</a>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> UCAD Books
        </h1>
        <% include ./partials/messages %>
        <form action="/books/ucad" method="POST">
          <div class="form-group">
            <label for="name">Title</label>
            <input
              type="title"
              id="title"
              name="title"
              class="form-control"
              placeholder="Enter title..."
              value="<%= typeof title != 'undefined' ? title : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="Author">Author</label>
            <input
              type="author"
              id="author"
              name="author"
              class="form-control"
              placeholder="Enter author..."
              value="<%= typeof author != 'undefined' ? author : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Genre</label>
            <input
              type="genre"
              id="genre"
              name="genre"
              class="form-control"
              placeholder="Enter genre..."
              value="<%= typeof genre != 'undefined' ? genre : '' %>"
            />
          </div>         
          <button type="submit" class="btn btn-primary btn-block">
            ADD
          </button>
        </form>
   
      </div>
    </div>
  </div>

